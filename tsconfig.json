{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  }
}
